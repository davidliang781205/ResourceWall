<div style="background-color:#e4b836;">
  <% if (errors.length) { %>
    <% errors.forEach((error) => { %>
      <p><strong>Error:</strong> <%= error %></p>
    <% }) %>
  <% } %>
  <% if (info.length) { %>
    <% info.forEach((message) => { %>
      <p><strong>Info:</strong> <%= message %></p>
    <% }) %>
  <% } %>
</div>
