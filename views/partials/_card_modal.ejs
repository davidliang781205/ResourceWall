<div id="cardModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title"></h2>
                <br />
                <h6 class="modal-subtitle"></h6>
            </div>
            <div class="modal-body">
                <div class="modal-body-content">
                    <img class="post-imgae">
                    <div class="post-description"></div>
                </div>
                <hr />
                <div class="user-actions">
                    <div class="stars">
                        <form id="stars">
                            <div class="rate-count"></div>
                            <input class="star star-5" id="star-5" type="radio" name="star">
                            <label class="star star-5" for="star-5"></label>
                            <input class="star star-5" id="star-4" type="radio" name="star">
                            <label class="star star-5" for="star-4"></label>
                            <input class="star star-5" id="star-3" type="radio" name="star">
                            <label class="star star-5" for="star-3"></label>
                            <input class="star star-5" id="star-2" type="radio" name="star">
                            <label class="star star-5" for="star-2"></label>
                            <input class="star star-5" id="star-1" type="radio" name="star">
                            <label class="star star-5" for="star-1"></label>
                        </form>
                    </div>
                    <div class="like">
                        <form id="like">    
                            <div class="like-count"></div>                    
                            <i class="fa fa-thumbs-up fa-2x"></i>
                        </form>
                    </div>
                </div>
                <div class="modal-comments"></div>
            </div>
            
            <div class="modal-footer">
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea name="comment" class="form-control comment" rows="5"></textarea>
                    <button type="button" class="btn btn-default submit-button">Comment</button>
                </div>
            </div>
        </div>
    </div>
</div>
